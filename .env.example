# Environment variables for docker-compose

# Directory where radar PNG files will be saved on your host machine
# Default: ./radar-output (relative to docker-compose.yml)
# Examples:
#   RADAR_OUTPUT_DIR=~/radar-data
#   RADAR_OUTPUT_DIR=/Users/username/radar-output
#   RADAR_OUTPUT_DIR=/tmp
RADAR_OUTPUT_DIR=./radar-output

# DigitalOcean Spaces Configuration (S3-compatible object storage)
# Upload to Spaces is ENABLED by default. Use --disable-upload flag to disable for local development.

# Your DigitalOcean Spaces access key
DIGITALOCEAN_SPACES_KEY=your-spaces-key-here

# Your DigitalOcean Spaces secret key
DIGITALOCEAN_SPACES_SECRET=your-spaces-secret-here

# DigitalOcean Spaces endpoint URL (format: https://<region>.digitaloceanspaces.com)
# Examples:
#   https://nyc3.digitaloceanspaces.com
#   https://fra1.digitaloceanspaces.com
#   https://sfo3.digitaloceanspaces.com
DIGITALOCEAN_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# DigitalOcean Spaces region
# Examples: nyc3, fra1, sfo3, sgp1, ams3
DIGITALOCEAN_SPACES_REGION=nyc3

# Your DigitalOcean Spaces bucket name
DIGITALOCEAN_SPACES_BUCKET=your-bucket-name

# Public URL for your Spaces bucket (format: https://<bucket-name>.<region>.digitaloceanspaces.com)
# Or use a CDN URL if you have one configured
# Examples:
#   https://my-bucket.nyc3.digitaloceanspaces.com
#   https://my-bucket.nyc3.cdn.digitaloceanspaces.com
#   https://cdn.example.com (custom CDN domain)
DIGITALOCEAN_SPACES_URL=https://your-bucket-name.nyc3.digitaloceanspaces.com